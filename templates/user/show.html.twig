{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table table-dark table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex align-items-center gap-5">
        <a class="btn btn-secondary btn-lg" href="{{ path('app_user_index') }}">back to list</a>
        <a class="btn btn-warning btn-lg" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
    </div>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
